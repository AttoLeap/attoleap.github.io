{
  "name": "attoleap-website",
  "type": "module",
  "version": "0.1.0",
  "license": "MPL-2.0",
  "private": true,
  "scripts": {
    "dev": "vinxi dev",
    "build": "vinxi build",
    "start": "vinxi start",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.+(js|ts|jsx|tsx|json|css|md)\""
  },
  "dependencies": {
    "@solidjs/meta": "^0.29.4",
    "@solidjs/router": "^0.13.5",
    "@solidjs/start": "^1.0.1",
    "@unocss/reset": "^0.59.4",
    "solid-js": "^1.8.17",
    "unocss": "^0.59.4",
    "vinxi": "^0.3.11"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "@unocss/eslint-config": "^0.60.4",
    "browserslist": "^4.23.1",
    "eslint": "8",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-solid": "^0.14.0",
    "lightningcss": "^1.25.1",
    "prettier": "^3.3.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "airbnb-base",
      "airbnb-typescript/base",
      "@unocss",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:@typescript-eslint/strict",
      "plugin:solid/typescript",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    },
    "plugins": [
      "@typescript-eslint",
      "solid"
    ],
    "rules": {
      "@unocss/enforce-class-compile": "warn",
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "": "never"
        }
      ],
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  },
  "eslintIgnore": [
    ".*",
    "dist",
    "dist.*",
    "node_modules"
  ],
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false,
    "arrowParens": "avoid",
    "printWidth": 100
  }
}
